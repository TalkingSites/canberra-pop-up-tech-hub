<section class="bg-body mt-5">
  <div class="text-center bg-body-tertiary px-5 pt-4 pb-1 rounded-3 shadow-sm border border-primary border-opacity-25 shadow-sm mb-4 col-12">
    <h2 class="mb-3 text-primary">Join Our Mailing List</h2>
    <p class="text-muted mb-3">
      Subscribe for updates on events, workshops, new facilities, and our next pop-up tech hubs locations!
    </p>
    
    <form class="needs-validation d-flex flex-column flex-md-row align-items-center justify-content-center gap-2 mb-3" 
          name="mailingList" 
          method="post" 
          netlify 
          novalidate>
      
      <div class="flex-grow-1" style="max-width: 400px;">
        <input type="email" 
               class="form-control" 
               id="email" 
               name="email" 
               placeholder="Enter your email"
               required>
        <div class="invalid-feedback">Please enter a valid email.</div>
      </div>
      
      <button type="submit" class="btn btn-primary">Subscribe</button>
    </form>
  </div>
</section>

<script>
(() => {
  'use strict';
  const forms = document.querySelectorAll('.needs-validation');
  Array.from(forms).forEach(form => {
    form.addEventListener('submit', (event) => {
      if (!form.checkValidity()) {
        event.preventDefault();
        event.stopPropagation();
      }
      form.classList.add('was-validated');
    }, false);
  });
})();
</script>